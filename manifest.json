{
  "manifest_version": 3,
  "name": "82link",
  "version": "1.0.0",
  "description": "Removes tracking information from links for easier access",
  "permissions": [
    "webNavigation",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*.pstmrk.it/*"
  ],
  "icons": {
    "16": "assets/icon16.jpeg",
    "32": "assets/icon32.jpeg",
    "48": "assets/icon48.jpeg",
    "128": "assets/icon128.jpeg"
  }
}
